<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.Login1Activity"
    android:background="@color/white">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03"/>

    <ImageView
        android:id="@+id/iv_login1_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_left_chevron"
        app:layout_constraintTop_toTopOf="@id/guide_top"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/tv_login1_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인할 방식을 선택해주세요"
        style="@style/headline2B"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintTop_toBottomOf="@id/iv_login1_back"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/tv_login1_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="계정이 없다면 회원가입 후 이용해주세요."
        style="@style/body1R"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintTop_toBottomOf="@id/tv_login1_title"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/tv_login1_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/login_logmeet"
        style="@style/body2B"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/btn_blue_8px"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintBottom_toTopOf="@id/v_login1_kakao"
        android:layout_marginBottom="16dp"/>

    <View
        android:id="@+id/v_login1_kakao"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:background="@drawable/btn_yellow_8px"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="110dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/v_login1_kakao"
        app:layout_constraintStart_toStartOf="@id/v_login1_kakao"
        app:layout_constraintEnd_toEndOf="@id/v_login1_kakao"
        app:layout_constraintBottom_toBottomOf="@id/v_login1_kakao">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_kakao"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_join1_kakao"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/tv_join1_kakao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_kakao"
            style="@style/body2B"
            android:textColor="#3C1E1E"
            android:gravity="center"
            android:background="#F9EB00"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>