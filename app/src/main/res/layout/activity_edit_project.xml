<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.projects.EditProjectActivity"
    android:background="@color/white">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.94"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03"/>

    <ImageView
        android:id="@+id/iv_editP_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_close"
        app:layout_constraintTop_toTopOf="@id/guide_top"
        app:layout_constraintStart_toStartOf="@id/guide_start"/>

    <TextView
        android:id="@+id/tv_editP_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로젝트 수정"
        style="@style/body1B"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintTop_toTopOf="@id/guide_top"/>

    <TextView
        android:id="@+id/tv_editP_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="완료"
        style="@style/body1B"
        android:textColor="@color/gray400"
        app:layout_constraintTop_toTopOf="@id/tv_editP_title"
        app:layout_constraintEnd_toEndOf="@id/guide_end"/>


    <TextView
        android:id="@+id/tv_editP_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/project_name"
        style="@style/body2B"
        android:textColor="@color/main_gray"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintTop_toBottomOf="@id/tv_editP_title"
        android:layout_marginStart="2dp"
        android:layout_marginTop="30dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/tiet_editP_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/body1R"
        android:maxLength="8"
        app:layout_constraintTop_toBottomOf="@id/tv_editP_name_title"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        android:layout_marginStart="2dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="2dp"/>

    <ImageView
        android:id="@+id/iv_editP_name_clear"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_close_circle"
        app:layout_constraintTop_toTopOf="@id/tiet_editP_name"
        app:layout_constraintBottom_toBottomOf="@id/tiet_editP_name"
        app:layout_constraintEnd_toEndOf="@id/tiet_editP_name"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_editP_text_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/init_text_length_8"
        style="@style/caption"
        android:textColor="@color/gray400"
        app:layout_constraintTop_toBottomOf="@id/tiet_editP_name"
        app:layout_constraintEnd_toEndOf="@id/tiet_editP_name"/>

    <TextView
        android:id="@+id/tv_editP_explain_title"
        style="@style/body2B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="30dp"
        android:text="프로젝트 설명"
        android:textColor="@color/main_gray"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintTop_toBottomOf="@id/tiet_editP_name" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/tiet_editP_explain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/body1R"
        app:layout_constraintTop_toBottomOf="@id/tv_editP_explain_title"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        android:layout_marginStart="2dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="2dp"/>

    <ImageView
        android:id="@+id/iv_editP_explain_clear"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_close_circle"
        app:layout_constraintTop_toTopOf="@id/tiet_editP_explain"
        app:layout_constraintBottom_toBottomOf="@id/tiet_editP_explain"
        app:layout_constraintEnd_toEndOf="@id/tiet_editP_explain"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/tv_editP_date_title"
        style="@style/body2B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="30dp"
        android:text="프로젝트 생성일"
        android:textColor="@color/main_gray"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintTop_toBottomOf="@id/tiet_editP_explain" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/tiet_editP_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/body1R"
        android:enabled="false"
        android:textColor="@color/sub_gray"
        app:layout_constraintTop_toBottomOf="@id/tv_editP_date_title"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        android:layout_marginStart="2dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="2dp"/>

    <TextView
        android:id="@+id/tv_editP_color_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로젝트 컬러"
        style="@style/body2B"
        android:textColor="@color/main_gray"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintTop_toBottomOf="@id/tiet_editP_date"
        android:layout_marginStart="2dp"
        android:layout_marginTop="30dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_editP_colorbox1"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_editP_color_title"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        android:layout_marginTop="6dp">

        <RadioButton
            android:id="@+id/p1"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/selector_prj1"
            android:button="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <RadioButton
            android:id="@+id/p2"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/selector_prj2"
            android:button="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/p1"
            app:layout_constraintEnd_toStartOf="@id/p3"/>

        <RadioButton
            android:id="@+id/p3"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/selector_prj3"
            android:button="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/p2"
            app:layout_constraintEnd_toStartOf="@id/p4"/>

        <RadioButton
            android:id="@+id/p4"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/selector_prj4"
            android:button="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/p3"
            app:layout_constraintEnd_toStartOf="@id/p5"/>

        <RadioButton
            android:id="@+id/p5"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/selector_prj5"
            android:button="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/p4"
            app:layout_constraintEnd_toStartOf="@id/p6"/>

        <RadioButton
            android:id="@+id/p6"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/selector_prj6"
            android:button="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/cl_editP_colorbox1"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        android:layout_marginTop="12dp">

        <RadioButton
            android:id="@+id/p7"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/selector_prj7"
            android:button="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <RadioButton
            android:id="@+id/p8"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/selector_prj8"
            android:button="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/p7"
            app:layout_constraintEnd_toStartOf="@id/p9"/>

        <RadioButton
            android:id="@+id/p9"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/selector_prj9"
            android:button="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/p8"
            app:layout_constraintEnd_toStartOf="@id/p10"/>

        <RadioButton
            android:id="@+id/p10"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/selector_prj10"
            android:button="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/p9"
            app:layout_constraintEnd_toStartOf="@id/p11"/>

        <RadioButton
            android:id="@+id/p11"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/selector_prj11"
            android:button="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/p10"
            app:layout_constraintEnd_toStartOf="@id/p12"/>

        <RadioButton
            android:id="@+id/p12"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/selector_prj12"
            android:button="@null"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_editP_color_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="120dp"
        android:background="@color/gray100">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_start2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.06"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_end2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.94"/>

        <TextView
            android:id="@+id/tv_editP_people_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="참여자"
            style="@style/body2B"
            android:textColor="@color/main_gray"
            app:layout_constraintStart_toStartOf="@id/guide_start2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="2dp"
            android:layout_marginTop="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_editP_people_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/guide_start2"
            app:layout_constraintEnd_toEndOf="@id/guide_end2"
            app:layout_constraintTop_toBottomOf="@id/tv_editP_people_title"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="14dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>