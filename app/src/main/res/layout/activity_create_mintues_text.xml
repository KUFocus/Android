<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.minutes.CreateMintuesTextActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.94"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03"/>

    <ImageView
        android:id="@+id/iv_create_mText_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_left_chevron"
        app:layout_constraintTop_toTopOf="@id/guide_top"
        app:layout_constraintStart_toStartOf="@id/guide_start"/>

    <TextView
        android:id="@+id/tv_create_mText_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회의록 작성"
        style="@style/body1B"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintTop_toTopOf="@id/guide_top"/>

    <TextView
        android:id="@+id/tv_create_mText_project_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로젝트"
        style="@style/body2B"
        android:textColor="@color/main_gray"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintTop_toBottomOf="@id/tv_create_mText_title"
        android:layout_marginStart="2dp"
        android:layout_marginTop="30dp"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_chevron_double_down"
        app:layout_constraintTop_toTopOf="@id/tiet_create_mText_project"
        app:layout_constraintBottom_toBottomOf="@id/tiet_create_mText_project"
        app:layout_constraintEnd_toEndOf="@id/tiet_create_mText_project"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_create_mText_project"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tiet_create_mText_project"
        app:layout_constraintStart_toStartOf="@id/tiet_create_mText_project"
        app:layout_constraintBottom_toBottomOf="@id/tiet_create_mText_project"
        app:layout_constraintEnd_toEndOf="@id/tiet_create_mText_project"
        android:visibility="gone">

        <View
            android:id="@+id/v_create_mText_project_color"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:background="@drawable/color_prj1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/tv_create_mText_project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/project_name"
            style="@style/body1R"
            app:layout_constraintStart_toEndOf="@id/v_create_mText_project_color"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/tiet_create_mText_project"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/body1R"
        android:hint="선택된 프로젝트 없음"
        android:focusable="false"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@id/tv_create_mText_project_title"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        android:layout_marginStart="2dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="2dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_create_mText_project_list"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="@drawable/box_gray_10px"
        android:alpha="1.0"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintTop_toBottomOf="@id/tiet_create_mText_project"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/tv_create_mText_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회의록 제목"
        style="@style/body2B"
        android:textColor="@color/main_gray"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintTop_toBottomOf="@id/tiet_create_mText_project"
        android:layout_marginStart="2dp"
        android:layout_marginTop="30dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/tiet_create_mText_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/body1R"
        android:hint="제목 입력"
        app:layout_constraintTop_toBottomOf="@id/tv_create_mText_name_title"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        android:layout_marginStart="2dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="2dp"/>

    <ImageView
        android:id="@+id/iv_create_mText_name_clear"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_close_circle"
        app:layout_constraintTop_toTopOf="@id/tiet_create_mText_name"
        app:layout_constraintBottom_toBottomOf="@id/tiet_create_mText_name"
        app:layout_constraintEnd_toEndOf="@id/tiet_create_mText_name"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/tv_create_mText_content_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회의 내용"
        style="@style/body2B"
        android:textColor="@color/main_gray"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintTop_toBottomOf="@id/tiet_create_mText_name"
        android:layout_marginStart="2dp"
        android:layout_marginTop="30dp"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsv_create_mText"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@drawable/rounded_border"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_create_mText_content_title"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        android:layout_marginTop="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiet_create_mText_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="회의 내용을 입력해보세요"
            style="@style/body2M"
            android:background="@android:color/transparent"
            android:inputType="textMultiLine|textCapSentences"
            android:gravity="top"
            android:scrollbars="vertical"
            android:overScrollMode="ifContentScrolls"
            android:maxLines="10"
            android:imeOptions="actionDone" />
    </androidx.core.widget.NestedScrollView>


    <TextView
        android:id="@+id/tv_create_mText_done"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="회의록 등록하기"
        style="@style/body2B"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/btn_gray_8px"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="110dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>