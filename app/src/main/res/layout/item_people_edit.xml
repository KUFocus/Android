<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/btn_gray_8px"
    android:backgroundTint="@color/white"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/tv_people_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        style="@style/body1B"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tv_people_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_people_name"
        app:layout_constraintEnd_toStartOf="@id/iv_people_delete"
        android:layout_marginEnd="14dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/iv_people_leader_blue"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_crown"/>

        <ImageView
            android:id="@+id/iv_people_leader_gray"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_crown_gray"
            android:visibility="gone"/>

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/iv_people_delete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_trash"
        app:layout_constraintTop_toTopOf="@id/tv_people_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_people_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>