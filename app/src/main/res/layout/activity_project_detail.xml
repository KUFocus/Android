<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.projects.ProjectDetailActivity"
    android:background="@color/white">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.94"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03"/>

    <ImageView
        android:id="@+id/iv_detailP_back"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_left_chevron"
        app:layout_constraintTop_toTopOf="@id/guide_top"
        app:layout_constraintStart_toStartOf="@id/guide_start"/>

    <TextView
        android:id="@+id/tv_detailP_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상세페이지"
        style="@style/body1B"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintTop_toTopOf="@id/guide_top"/>

    <ImageView
        android:id="@+id/iv_detailP_burger_menu"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_burger_menu"
        app:layout_constraintTop_toTopOf="@id/tv_detailP_title"
        app:layout_constraintEnd_toEndOf="@id/guide_end"/>

    <TextView
        android:id="@+id/tv_detailP_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/project_name"
        style="@style/body2B"
        android:textColor="@color/main_gray"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintTop_toBottomOf="@id/tv_detailP_title"
        android:layout_marginStart="2dp"
        android:layout_marginTop="30dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/tiet_detailP_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/body1R"
        android:enabled="false"
        android:textColor="@color/black"
        android:maxLength="8"
        app:layout_constraintTop_toBottomOf="@id/tv_detailP_name_title"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        android:layout_marginStart="2dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="2dp"/>

    <ImageView
        android:id="@+id/iv_detailP_name_clear"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_close_circle"
        app:layout_constraintTop_toTopOf="@id/tiet_detailP_name"
        app:layout_constraintBottom_toBottomOf="@id/tiet_detailP_name"
        app:layout_constraintEnd_toEndOf="@id/tiet_detailP_name"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_detailP_explain_title"
        style="@style/body2B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="30dp"
        android:text="프로젝트 설명"
        android:textColor="@color/main_gray"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintTop_toBottomOf="@id/tiet_detailP_name" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/tiet_detailP_explain"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/body1R"
        android:enabled="false"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_detailP_explain_title"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        android:layout_marginStart="2dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="2dp"/>

    <ImageView
        android:id="@+id/iv_detailP_explain_clear"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_close_circle"
        app:layout_constraintTop_toTopOf="@id/tiet_detailP_explain"
        app:layout_constraintBottom_toBottomOf="@id/tiet_detailP_explain"
        app:layout_constraintEnd_toEndOf="@id/tiet_detailP_explain"
        android:visibility="gone"/>


    <TextView
        android:id="@+id/tv_detailP_date_title"
        style="@style/body2B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="30dp"
        android:text="프로젝트 생성일"
        android:textColor="@color/main_gray"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintTop_toBottomOf="@id/tiet_detailP_explain" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/tiet_detailP_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/body1R"
        android:enabled="false"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_detailP_date_title"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        android:layout_marginStart="2dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="2dp"/>

    <TextView
        android:id="@+id/tv_detailP_color_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="프로젝트 컬러"
        style="@style/body2B"
        android:textColor="@color/main_gray"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintTop_toBottomOf="@id/tiet_detailP_date"
        android:layout_marginStart="2dp"
        android:layout_marginTop="30dp"/>

    <View
        android:id="@+id/v_detailP_color"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/color_prj1"
        app:layout_constraintTop_toBottomOf="@id/tv_detailP_color_title"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        android:layout_marginTop="6dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tv_detailP_color_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="60dp"
        android:background="@color/gray100">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_start2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.06"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_end2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.94"/>

        <TextView
            android:id="@+id/tv_detailP_people_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="참여자"
            style="@style/body2B"
            android:textColor="@color/main_gray"
            app:layout_constraintStart_toStartOf="@id/guide_start2"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="2dp"
            android:layout_marginTop="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_detailP_people_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@id/guide_start2"
            app:layout_constraintEnd_toEndOf="@id/guide_end2"
            app:layout_constraintTop_toBottomOf="@id/tv_detailP_people_title"
            android:layout_marginTop="14dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>