<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.minutes.SearchMinutesActivity"
    android:background="@color/white">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.06"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.94"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.03"/>

    <ImageView
        android:id="@+id/iv_searchM_close"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_close"
        app:layout_constraintTop_toTopOf="@id/guide_top"
        app:layout_constraintStart_toStartOf="@id/guide_start"/>

    <TextView
        android:id="@+id/tv_searchM_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/search"
        style="@style/body1B"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintTop_toTopOf="@id/guide_top"/>
    
    <View
        android:id="@+id/v_searchM_input"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@drawable/box_gray_30px"
        android:backgroundTint="@color/gray100"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintTop_toBottomOf="@id/tv_searchM_title"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="48dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/tiet_searchM_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/body2M"
        android:hint="@string/example_search"
        app:layout_constraintTop_toTopOf="@id/v_searchM_input"
        app:layout_constraintStart_toStartOf="@id/v_searchM_input"
        app:layout_constraintEnd_toEndOf="@id/v_searchM_input"
        app:layout_constraintBottom_toBottomOf="@id/v_searchM_input"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:background="@android:color/transparent"/>

    <View
        android:id="@+id/v_searchM_btn"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="@drawable/box_blue_30px"
        app:layout_constraintTop_toTopOf="@id/v_searchM_input"
        app:layout_constraintStart_toEndOf="@id/v_searchM_input"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        android:layout_marginStart="6dp"/>
    
    <ImageView
        android:id="@+id/iv_searchM_search"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_search"
        app:layout_constraintTop_toTopOf="@id/v_searchM_btn"
        app:layout_constraintStart_toStartOf="@id/v_searchM_btn"
        app:layout_constraintEnd_toEndOf="@id/v_searchM_btn"
        app:layout_constraintBottom_toBottomOf="@id/v_searchM_btn"
        app:tint="@color/white" />

    <FrameLayout
        android:id="@+id/fl_searchM_recent_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/v_searchM_input"
        app:layout_constraintStart_toStartOf="@id/tiet_searchM_input"
        android:layout_marginTop="24dp"
        style="@style/body2M">

        <TextView
            android:id="@+id/tv_searchM_no_recent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최근 검색어가 없습니다."
            android:textColor="@color/gray400"/>

        <TextView
            android:id="@+id/tv_searchM_yes_recent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="최근 검색어"
            android:textColor="@color/gray400"
            android:visibility="gone"/>
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_searchM_delete_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/v_searchM_btn"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="14dp">
        
        <ImageView
            android:id="@+id/iv_searchM_delete"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_trash"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_searchM_delete"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/black"/>

        <TextView
            android:id="@+id/tv_searchM_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="전체삭제"
            style="@style/body2M"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@id/iv_searchM_delete"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_searchM_delete"
            app:layout_constraintBottom_toBottomOf="@id/iv_searchM_delete"
            android:layout_marginStart="2dp"/>
        
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_searchM"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fl_searchM_recent_title"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        android:layout_marginHorizontal="14dp"
        android:layout_marginTop="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>