<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/btn_gray_8px"
    android:backgroundTint="@color/white"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/tv_people_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        style="@style/body1B"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"/>
    
    <ImageView
        android:id="@+id/iv_people_leader"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_crown"
        app:layout_constraintTop_toTopOf="@id/tv_people_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_people_name"
        app:layout_constraintStart_toEndOf="@id/tv_people_name"
        android:layout_marginStart="14dp"
        android:visibility="gone"/>
    
    <ImageView
        android:id="@+id/iv_people_message"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_message"
        app:layout_constraintTop_toTopOf="@id/tv_people_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_people_name"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>