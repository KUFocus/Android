<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.projects.ProjectFragment"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.03"/>

        <TextView
            android:id="@+id/tv_project_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/eng_projects"
            style="@style/headline2B"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/guide_top"
            app:layout_constraintStart_toStartOf="@id/guide_start"/>

        <ImageView
            android:id="@+id/iv_project_add_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_add_project2"
            app:layout_constraintTop_toTopOf="@id/tv_project_title"
            app:layout_constraintEnd_toEndOf="@id/guide_end"/>


<!--        <com.google.android.material.tabs.TabLayout-->
<!--            android:id="@+id/tl_project_tab"-->
<!--            android:background="#FFFFFF"-->
<!--            android:elevation="5dp"-->
<!--            app:tabIndicatorHeight="0dp"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            app:layout_constraintTop_toBottomOf="@id/tv_project_title"-->
<!--            app:layout_constraintStart_toStartOf="@id/guide_start"-->
<!--            android:layout_marginTop="10dp"/>-->

<!--        <androidx.viewpager.widget.ViewPager-->
<!--            android:id="@+id/vp_project_pager"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="20dp"-->
<!--            android:layout_above="@+id/tl_project_tab"-->
<!--            app:layout_constraintTop_toBottomOf="@id/tl_project_tab"-->
<!--            app:layout_constraintStart_toStartOf="@id/guide_start"-->
<!--            app:layout_constraintEnd_toEndOf="@id/guide_end"/>-->

        <LinearLayout
            android:id="@+id/ll_project_tab"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tv_project_title"
            app:layout_constraintStart_toStartOf="@id/guide_start"
            android:layout_marginTop="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_project_tab_all"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_project_tab_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전체"
                    style="@style/body1B"
                    android:textColor="@color/main_blue"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <View
                    android:id="@+id/v_project_tab_all"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/main_blue"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btn_project_tab_bookmark"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginStart="2dp">
                <TextView
                    android:id="@+id/tv_project_tab_bookmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="즐겨찾기"
                    style="@style/body1M"
                    android:textColor="@color/gray500"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <View
                    android:id="@+id/v_project_tab_bookmark"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/gray400"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_project_none_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ll_project_tab"
            app:layout_constraintStart_toStartOf="@id/guide_start"
            android:layout_marginTop="16dp"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_project_none_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="우측 상단 버튼을 통해"
                style="@style/body3M"
                android:textColor="@color/gray400"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로젝트 생성 또는 참여해보세요."
                style="@style/body3M"
                android:textColor="@color/gray400"
                app:layout_constraintTop_toBottomOf="@id/tv_project_none_project"
                app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_project_none_bookmark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="즐겨찾기 된 프로젝트가 없습니다."
            style="@style/body3M"
            android:textColor="@color/gray400"
            app:layout_constraintTop_toBottomOf="@id/ll_project_tab"
            app:layout_constraintStart_toStartOf="@id/guide_start"
            android:layout_marginTop="16dp"
            android:visibility="gone"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_project_project_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:elevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/ll_project_tab"
            app:layout_constraintStart_toStartOf="@id/guide_start"
            app:layout_constraintEnd_toEndOf="@id/guide_end"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp">

        </androidx.recyclerview.widget.RecyclerView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>