<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95"/>

    <TextView
        android:id="@+id/tv_start_catchphrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모든 회의 기록을 한번에"
        style="@style/body1B"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="166dp"/>

<!--    <ImageView-->
<!--        android:id="@+id/iv_start_logo"-->
<!--        android:layout_width="0dp"-->
<!--        android:layout_height="0dp"-->
<!--        android:src="@drawable/logo1_without_background"-->
<!--        app:layout_constraintTop_toTopOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        app:layout_constraintWidth_percent="0.302"-->
<!--        app:layout_constraintDimensionRatio="109:124"-->
<!--        android:layout_marginTop="33dp"/>-->

    <ImageView
        android:id="@+id/iv_start_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo1_without_background"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_start_catchphrase"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="33dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo1_letter"
        app:layout_constraintTop_toBottomOf="@id/iv_start_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>


    <TextView
        android:id="@+id/tv_start_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/login"
        style="@style/body2B"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/btn_blue_8px"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintBottom_toTopOf="@id/tv_start_join"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tv_start_join"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/join"
        style="@style/body2B"
        android:textColor="@color/main_blue"
        android:gravity="center"
        android:background="@drawable/btn_blueline_8px"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintEnd_toEndOf="@id/guide_end"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="110dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>