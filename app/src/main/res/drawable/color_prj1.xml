<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 테두리 -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/transparent" /> <!-- 투명한 내부 -->
            <stroke android:width="2dp" android:color="@android:color/transparent" /> <!-- 테두리 색상 -->
        </shape>
    </item>

    <!-- 내부 색상 -->
    <item android:right="4dp" android:left="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="@color/project1" />
        </shape>
    </item>
</layer-list>